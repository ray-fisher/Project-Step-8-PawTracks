@model Project_Step_8_PawTracks.Models.ForgotPassword

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Rest Password</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <h5 class="bg-primary text-white text-center m-2 p-2">
        Resest Your Password
    </h5>

    <form asp-action="Signup" class="m-2" method="post">
        <div id="error-message-div" asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Username"> Username: </label>
            <label asp-for="Username" class="form-control" placeholder="Enter Your Username"></label>
        </div>
        <div class="form-group">
            <label asp-for="Email"> Email: </label>
            <label asp-for="Email" class="form-control" placeholder="Enter Your Email"></label>
        </div>

        <button type="submit" class="btn btn-primary"> Reset Password </button>

    </form>
</body>
</html>
